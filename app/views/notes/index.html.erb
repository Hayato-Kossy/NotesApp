<div class="container mt-5">
    <h1 class="text-center mb-4">Notes</h1>
    <table class="table table-bordered">
        <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @notes.each do |note| %>
            <tr>
            <td><%= note.id %></td>
            <td><%= note.title %></td>
            <td>
                <%= link_to '詳細', note_path(note), class: 'btn btn-primary' %>
                <%= link_to '編集', edit_note_path(note), class: 'btn btn-secondary' %>
                <%= link_to '削除', note_path(note), data: { turbo_method: :delete ,confirm: '本当に削除しますか？' }, class: 'btn btn-danger'%>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
