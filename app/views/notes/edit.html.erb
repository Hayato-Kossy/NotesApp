<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
        <h1 class="text-center mb-4">Create New Note</h1>
        <%= form_with(model: @note, local: true) do |form| %>
            <div class="form-group">
            <%= form.label :title, class: 'font-weight-bold' %>
            <%= form.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
            <%= form.label :body, class: 'font-weight-bold' %>
            <%= form.text_area :body, class: 'form-control', rows: 10 %>
            </div>
            <%= form.submit "ノートを編集する", class: 'btn btn-primary btn-block' %>
        <% end %>
        </div>
    </div>
</div>
