<div class="container mt-5">
    <h1 class="text-center mb-4">Note #<%= @note.id %></h1>
    <div class="card">
        <div class="card-header">
            <h2><%= @note.title %></h2>
        </div>
        <div class="card-body">
            <p class="card-text"><%= @note.body %></p>
        </div>
        <div class="card-footer text-right">
            <div class="btn-group">
                <%= link_to '戻る', notes_path, class: 'btn btn-primary mr-2' %>
                <%= link_to '編集', edit_note_path(@note), class: 'btn btn-secondary mr-2' %>
                <%= link_to '削除', note_path(@note), data: { turbo_method: :delete ,confirm: '本当に削除しますか？' }, class: 'btn btn-danger mr-2' %>
            </div>
        </div>
    </div>
</div>
